
<!DOCTYPE html>
@model IEnumerable<TodoWeb2.Models.Usuario>
           @{
               ViewBag.Title = "Index";
               Layout = "/Views/Shared/_LayoutPage.cshtml";
           }
    
        <table class="table table-hover">
            <tr>
                <th>UsuarioId</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Ações</th>
     
            </tr>
            @*@foreach(var u in ViewBag.Usuarios)*@
            @foreach (var u in Model)
            {
                <tr>
                    <td>@u.UsuarioId</td>
                    <td>@u.Nome</td>
                    <td>@u.Email</td>
                    <td>@u.Senha</td>
                    <td>
                        <a href="/usuario/update/@u.UsuarioId">Editar</a>
                        <a href="/usuario/delete/@u.UsuarioId">Apagar</a>
                </tr>
            }
        </table>

         <a class="btn btn-primary btn-sm" href="/usuario/create">
        <span class="glyphicon glyphicon-plus"></span>
        Adicionar</a>
  

